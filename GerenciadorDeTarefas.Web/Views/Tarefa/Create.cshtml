@using GerenciadorDeTarefas.Domain.ViewModels
@model TarefaViewModel

<form action="/api/Tarefas" method="post" class="row g-3">


    <input asp-for="Id" type="hidden" />
    <input asp-for="DataDeCriacao" type="hidden" />

    <div class="col-md-6">
        <label asp-for="Titulo" class="fw-semibold">Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>

    <div class="col-md-6">
        <label asp-for="Status" class="fw-semibold"></label>
        <input asp-for="Status" class="form-control" required/>
    </div>

    <div class="col-12">
        <label asp-for="Descricao" class="fw-semibold">Descrição</label>
        <textarea rows="3" asp-for="Descricao" class="form-control" required></textarea>
    </div>


    <div class="justify-content-end d-flex gap-2">

        <a href="@Url.Action("Index")" class="btn btn-secondary">
            Voltar
        </a>

        <button type="submit" class="btn btn-primary">
            Salvar
        </button>
    </div>
</form>